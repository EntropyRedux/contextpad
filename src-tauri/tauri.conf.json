{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ContextPad",
  "version": "1.3.2",
  "identifier": "com.entropyredux.contextpad",
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [{
      "title": "ContextPad",
      "width": 1000,
      "height": 650,
      "minWidth": 500,
      "minHeight": 400,
      "decorations": false,
      "transparent": false
    }],
    "security": {
      "csp": null
    }
  }
}
